{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "CScript",
  "scopeName": "source.cscript",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#functions" },
    { "include": "#classes" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.cscript",
          "begin": "//",
          "end": "$"
        },
        {
          "name": "comment.block.cscript",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.cscript",
          "match": "\\b(if|else|while|for|do|break|continue|return|switch|case|default|try|catch|finally|throw|new|delete|typeof|instanceof|in|of)\\b"
        },
        {
          "name": "keyword.declaration.cscript",
          "match": "\\b(var|let|const|function|class|interface|type|enum|namespace|import|export|from|as)\\b"
        },
        {
          "name": "keyword.cscript.special",
          "match": "\\b(match|with|withUpdate|from|where|select|orderby|groupby|join|operator)\\b"
        },
        {
          "name": "storage.type.cscript",
          "match": "\\b(string|number|boolean|object|any|void|null|undefined|true|false)\\b"
        },
        {
          "name": "storage.modifier.cscript",
          "match": "\\b(public|private|protected|static|readonly|abstract|async|await)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.pipeline.cscript",
          "match": "\\|>"
        },
        {
          "name": "keyword.operator.comparison.cscript",
          "match": "(===|!==|==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.cscript",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.arithmetic.cscript",
          "match": "(\\+\\+|--|\\+|\\-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.assignment.cscript",
          "match": "(=|\\+=|\\-=|\\*=|/=|%=)"
        },
        {
          "name": "keyword.operator.range.cscript",
          "match": "\\.\\."
        },
        {
          "name": "keyword.operator.spread.cscript",
          "match": "\\.\\.\\."
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.cscript",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.cscript",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.cscript",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.cscript",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.template.cscript",
          "begin": "`",
          "end": "`",
          "patterns": [
            {
              "name": "meta.embedded.expression.cscript",
              "begin": "\\$\\{",
              "end": "\\}",
              "patterns": [
                { "include": "$self" }
              ]
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.decimal.cscript",
          "match": "\\b\\d+(\\.\\d+)?([eE][+-]?\\d+)?\\b"
        },
        {
          "name": "constant.numeric.hex.cscript",
          "match": "\\b0[xX][a-fA-F0-9]+\\b"
        },
        {
          "name": "constant.numeric.binary.cscript",
          "match": "\\b0[bB][01]+\\b"
        },
        {
          "name": "constant.numeric.octal.cscript",
          "match": "\\b0[oO][0-7]+\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.cscript",
          "match": "\\b([a-zA-Z_$][a-zA-Z0-9_$]*)\\s*(?=\\()"
        },
        {
          "name": "support.function.cscript",
          "match": "\\b(console|Object|Array|String|Number|Boolean|Date|Math|JSON|Promise)\\b"
        }
      ]
    },
    "classes": {
      "patterns": [
        {
          "name": "entity.name.type.class.cscript",
          "match": "\\b(class)\\s+([a-zA-Z_$][a-zA-Z0-9_$]*)",
          "captures": {
            "1": { "name": "keyword.declaration.class.cscript" },
            "2": { "name": "entity.name.type.class.cscript" }
          }
        },
        {
          "name": "entity.name.function.operator.cscript",
          "match": "\\$operator_[a-zA-Z_]+\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.constant.cscript",
          "match": "\\b[A-Z][A-Z0-9_]*\\b"
        },
        {
          "name": "variable.other.cscript",
          "match": "\\b[a-zA-Z_$][a-zA-Z0-9_$]*\\b"
        }
      ]
    }
  }
}